<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joan.librohechizos">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.ListarPersonajes"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.CrearPersonajeActivity"
            android:label="@string/activity_crear_personaje"
            android:parentActivityName=".ui.ListarPersonajes" />
        <activity android:name=".ui.MostrarHechizo" />
        <activity android:name=".ui.LibroDeHechizos"></activity>
    </application>

</manifest>